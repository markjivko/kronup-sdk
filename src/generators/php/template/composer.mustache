{
    "name": "{{theGitUserId}}/{{theGitRepoId}}",
    "type": "library",
    "description": "The official SDK for kronup",
    "keywords": [
        "sdk", "kronup", "kronup.io", "php-sdk", "building-in-public", "build-in-public", "saas", "api"
    ],
    "homepage": "{{theAuthorUrl}}",
    "license": "MIT",
    "authors": [
        {
            "name": "kronup",
            "homepage": "https://php.kronup.io",
            "role": "Team"
        },
        {   
            "name": "Mark Jivko",
            "homepage": "https://markjivko.com",
            "role": "Author"
        }
    ],
    "support": {
        "issues": "https://github.com/kronup/kronup-php/issues",
        "source": "https://github.com/kronup/kronup-php"
    },
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "ext-dom": "*"
    },
    "autoload": {
        "psr-4": { "{{escapedInvokerPackage}}\\" : "{{{srcBasePath}}}/" }
    },
    "autoload-dev": {
        "psr-4": { "{{escapedInvokerPackage}}\\Test\\" : "{{{testBasePath}}}/" }
    }
}
